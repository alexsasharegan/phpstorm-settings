<application>
  <component name="ParameterNameHintsSettings">
    <blacklists>
      <blacklist language="PHP">
        <added pattern="\getenv(varname)" />
        <added pattern="\compact(varname,_)" />
        <added pattern="\json_encode(value,options,depth)" />
        <added pattern="\sprintf(format,args,_)" />
        <added pattern="\json_decode(json,assoc,depth,options)" />
        <added pattern="\Slim\PDO\Statement\InsertStatement.into(table)" />
        <added pattern="\PDO.query(statement,mode,arg3,ctorargs)" />
        <added pattern="\Slim\PDO\Statement\SelectStatement.from(table)" />
        <added pattern="\Slim\PDO\Statement\StatementContainer.where(column,operator,value,chainType)" />
        <added pattern="\Slim\PDO\Statement\UpdateStatement.table(table)" />
        <added pattern="\PDO.prepare(statement,driver_options)" />
        <removed pattern="" />
      </blacklist>
      <blacklist language="YAML" />
      <blacklist language="XML" />
    </blacklists>
  </component>
</application>